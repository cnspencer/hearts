<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml" fx:controller="Hearts">
    <HBox prefHeight="480.0" prefWidth="480.0">
        <VBox>
            <TextField fx:id="p1IP" promptText="IP of player #1" translateY="60"  translateX="5"/>
            <Label text="Player 1 IP (self)" translateY="60"  translateX="5"/>
            <CheckBox fx:id="p1Bot" onAction="#p1Bind" text="Bot" translateY="60"  translateX="10"/>
        </VBox>
        <VBox>
            <TextField fx:id="p2IP" promptText="IP of player #2" translateY="60"  translateX="10"/>
            <Label text="Player 2 IP" translateY="60"  translateX="15"/>
            <CheckBox fx:id="p2Bot" onAction="#p2Bind" text="Bot" translateY="60"  translateX="15"/>
        </VBox>
        <VBox>
            <TextField fx:id="p3IP" promptText="IP of player #3" translateY="60"  translateX="15"/>
            <Label text="Player 3 IP" translateY="60"  translateX="20"/>
            <CheckBox fx:id="p3Bot" onAction="#p3Bind" text="Bot" translateY="60"  translateX="20"/>
        </VBox>
        <VBox>
            <TextField fx:id="p4IP" promptText="IP of player #4" translateY="60"  translateX="20"/>
            <Label text="Player 4 IP" translateY="60"  translateX="25"/>
            <CheckBox fx:id="p4Bot" onAction="#p4Bind" text="Bot" translateY="60"  translateX="25"/>
        </VBox>
    </HBox>
    <VBox fx:id="buttonPane">
        <Button fx:id="ipSubmit" text="Submit" alignment="CENTER" onMouseClicked="#setIPs" translateY="-60"  translateX="320"/>
    </VBox>
</VBox>
