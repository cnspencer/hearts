<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml" fx:controller="Hearts">
    <VBox>
        <TextField fx:id="svIP" promptText="IP of server" translateY="20" onAction="#setIPs"/>
        <Label text="Server IP" translateY="20"/>
    </VBox>
    <VBox prefHeight="480.0" prefWidth="480.0">
        <TextField fx:id="name" promptText="Enter your name" translateY="60" onAction="#setIPs"/>
        <TextField fx:id="pIP" promptText="Your IP" translateY="60" onAction="#setIPs"/>
        <Label text="Player IP (self)" translateY="60"/>
    </VBox>
    <VBox>
        <Button fx:id="ipSubmit" text="Submit" alignment="CENTER" onAction="#setIPs" translateY="-60"  translateX="320"/>
    </VBox>
</VBox>