<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml" fx:controller="Hearts" >
    <VBox>
        <TextField fx:id="svIP" promptText="IP of server" translateY="20"/>
        <Label text="Server IP" translateY="20"/>
        <!--<Button fx:id="connect" text="Connect to Server" alignment="CENTER" onMouseClicked="#servConnect" translateY="-20" translateX="320"/>-->
    </VBox>
    <HBox prefHeight="480.0" prefWidth="480.0">
        <VBox>
            <TextField fx:id="name" promptText="Enter your name" translateY="60"/>
            <TextField fx:id="pIP" promptText="Your IP" translateY="60"/>
            <Label text="Player IP (self)" translateY="60"/>
        </VBox>
    </HBox>
    <VBox>
        <Button fx:id="ipSubmit" text="Submit" alignment="CENTER" onMouseClicked="#setIPs" translateY="-60"  translateX="320"/>
    </VBox>
</VBox>