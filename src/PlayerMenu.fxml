<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Hearts">
    <HBox prefHeight="480.0" prefWidth="480.0">
        <VBox>
        <children>
            <TextField fx:id="P1IP" padding="20" alignment="CENTER"></TextField>
            <Label text="Player 1 IP (self)" padding="20"></Label>
        </children>
        </VBox>
        <VBox>
            <children>
                <TextField fx:id="P2IP" padding="20" alignment="CENTER"></TextField>
                <Label text="Player 2 IP" padding="20"></Label>
            </children>
        </VBox>
        <VBox>
            <children>
                <TextField fx:id="P3IP" padding="20" alignment="CENTER"></TextField>
                <Label text="Player 3 IP" padding="20"></Label>
            </children>
        </VBox>
        <VBox>
            <children>
                <TextField fx:id="P4IP" padding="20" alignment="CENTER"></TextField>
                <Label text="Player 4 IP" padding="20"></Label>
            </children>
        </VBox>
    </HBox>
    <VBox>
        <children>
            <Label padding="20" text="Leave blank or enter bot for a computer player" alignment="CENTER"></Label>
            <Button fx:id="ipSubmit" text="Submit" padding="20" alignment="CENTER" onMouseClicked="#setIPs"></Button>
        </children>
    </VBox>
</VBox>
