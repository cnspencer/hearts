<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Hearts">
    <HBox prefHeight="480.0" prefWidth="480.0">
        <VBox>
            <TextField> promptText="IP of player #1" fx:id="P1IP" padding="20" alignment="CENTER" onAction="#setp1IP"</TextField>
            <Label> text="Player 1 IP (self)" padding="20"</Label>
            <CheckBox> fx:id="P1Bot" text="Bot"</CheckBox>
        </VBox>
        <VBox>
            <TextField> editable="true" promptText="IP of player #2" fx:id="P2IP" padding="20" alignment="CENTER"</TextField>
            <Label> text="Player 2 IP" padding="20"</Label>
            <CheckBox> fx:id="P2Bot" text="Bot"</CheckBox>
        </VBox>
        <VBox>
            <TextField> editable="true" promptText="IP of player #3" fx:id="P3IP" padding="20" alignment="CENTER"</TextField>
            <Label> text="Player 3 IP" padding="20"</Label>
            <CheckBox> fx:id="P3Bot" text="Bot"</CheckBox>
        </VBox>
        <VBox>
            <TextField> editable="true" promptText="IP of player #4" fx:id="P4IP" padding="20" alignment="CENTER"</TextField>
            <Label> text="Player 4 IP" padding="20"</Label>
            <CheckBox> fx:id="P4Bot" text="Bot"</CheckBox>
        </VBox>
    </HBox>
    <VBox id="buttonPane">
        <Button> id="ipSubmit" fx:id="ipSubmit" text="Submit" padding="20" alignment="CENTER" onMouseClicked="#setIPs"</Button>
    </VBox>
</VBox>
