<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns:fx="http://javafx.com/fxml" fx:controller="Hearts" background="Light">
    <fx:define>
        <TextField fx:id="p1IP"></TextField>
        <TextField fx:id="p2IP"></TextField>
        <TextField fx:id="p3IP"></TextField>
        <TextField fx:id="p4IP"></TextField>
        <CheckBox fx:id="p1Bot" onAction="#p1Bind"></CheckBox>
        <CheckBox fx:id="p2Bot" onAction="#p2Bind"></CheckBox>
        <CheckBox fx:id="p3Bot" onAction="#p3Bind"></CheckBox>
        <CheckBox fx:id="p4Bot" onAction="#p4Bind"></CheckBox>
    </fx:define>
    <HBox prefHeight="480.0" prefWidth="480.0">
        <VBox>
            <fx:reference source="p1IP" promptText="IP of player #1" padding="20" alignment="CENTER"/>
            <Label text="Player 1 IP (self)" padding="20"></Label>
            <fx:reference source="p1Bot" text="Bot"/>
        </VBox>
        <VBox>
            <fx:reference source="p2IP" promptText="IP of player #1" padding="20" alignment="CENTER"/>
            <Label text="Player 2 IP" padding="20"></Label>
            <fx:reference source="p2Bot" text="Bot"/>
        </VBox>
        <VBox>
            <fx:reference source="p3IP" promptText="IP of player #1" padding="20" alignment="CENTER"/>
            <Label text="Player 3 IP" padding="20"></Label>
            <fx:reference source="p3Bot" text="Bot"/>
        </VBox>
        <VBox>
            <fx:reference source="p4IP" promptText="IP of player #1" padding="20" alignment="CENTER"/>
            <Label text="Player 4 IP" padding="20"></Label>
            <fx:reference source="p4Bot" text="Bot"/>
        </VBox>
    </HBox>
    <VBox fx:id="buttonPane">
        <Button fx:id="ipSubmit" text="Submit" padding="20" alignment="CENTER" onMouseClicked="#setIPs"></Button>
    </VBox>
</VBox>
